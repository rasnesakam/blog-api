generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Area {
  name           String
  normalizedName String
}

type Category {
  name           String
  normalizedName String
}

type Tag {
  name           String
  normalizedName String
}

type MetaData {
  createdDate DateTime   @default(now())
  visible     Boolean    @default(false)
  description String
  area        Area
  categories  Category[]
  tags        Tag[]
}

model Post {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  featuredImg String
  title       String
  content     String
  uri         String   @unique
  metaData    MetaData
  Author      Author?  @relation(fields: [authorId], references: [id])
  authorId    String   @db.ObjectId
}

enum Scope {
  SELF
  GENERAL
}

model Author {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  teamId        String
  name          String
  middleName    String?
  surname       String
  scope         Scope   @default(SELF)
  email         String
  registerToken String
  posts         Post[]
}

model Contact {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String @default("Anonymous")
  surname String @default("Anonymous")
  mail    String @default("Anonymous")
  title   String @default("Anonymous")
  text    String
}

model SocialLinks {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  linkName String
  href     String
}
